<% if user_signed_in? %>
  <div id="friends">
  <table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Twitter</th>
    
    <th colspan="2"></th>
  </tr>
  </thead>
  <tbody>
    <% @friends.each do |friend| %>
    <% if friend.user == current_user %>
      <tr>
        <td> 
        <%= link_to friend.first_name + " " + friend.last_name, friend %> 
        </td>
        <td> <%= friend.email %> </td>
        <td> <%= friend.phone %> </td>
        <td> <%= friend.twitter %> </td>
        <td><%= link_to "Edit", edit_friend_path(friend) %> </td>
        <td><%= button_to "Delete", friend, method: :delete, class: "btn btn-outline-danger btn-sm" %>
      </tr>
    <% end %>
    <% end %>
  </tbody>
  </table>
  <br/>
    <p>
        <%= link_to "New friend", new_friend_path, class: "btn btn-secondary" %>
    </p>
  </div>
<% else %>
  <h1>Hello World</h1>
  This is my first Rails Webpage
<% end %>


